<%- include("../partial/meta") %>

<body class="bg-gradient-to-r from-white via-pink-200 to-white flex items-center justify-center h-screen">

    <form class="bg-gradient-to-r from-white to-pink-200 p-8 rounded-lg shadow-md w-96" action="/sendData" method="post" >
        <div class="mb-4">
            <input type="text" name="name" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500 text-gray-700" autocomplete="off" required placeholder="Enter Name">
        </div>
        <div class="mb-4">
            <input type="text" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500 text-gray-700" autocomplete="off" required placeholder="Enter Email">
        </div>
        <div class="mb-4">
            <input type="text" name="phone" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500 text-gray-700" autocomplete="off" required placeholder="Enter Phone">
        </div>
        <div class="mb-8">
            <textarea name="notes" class="w-full h-32 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500 text-gray-700 resize-none" autocomplete="off" required placeholder="Enter your queries"></textarea>
        </div>
        <button type="submit" class="w-full bg-gradient-to-r from-pink-500 to-white text-white py-2 rounded-md hover:bg-gradient-to-r hover:from-white hover:via-pink-500 hover:to-white">Submit</button>
    </form>

</body>
</html>

